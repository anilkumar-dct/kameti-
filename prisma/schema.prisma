generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["native", "windows", "darwin", "darwin-arm64", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Prisma requires at least one model to generate the client
model User {
  id    Int     @id @default(autoincrement())
  email String? @unique
}

// Define the enum for Kameti status
enum KametiStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}

model Kameti {
  id        Int                      @id @default(autoincrement())
  title     String                   @unique
  budget    Float
  months    Int
  installment Float
  status    KametiStatus             @default(INACTIVE)
  createdAt DateTime                 @default(now())
  updatedAt DateTime                 @updatedAt

  // Relations to monthly withdrawals model
  monthlyWithdrawals KametiMonthlyWithdrawal[]

  // Define table name in database
  @@map("kameti") 
}

model KametiMonthlyWithdrawal {
  id         Int      @id @default(autoincrement())
  kametiId   Int
  monthNumber Int
  amount     Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations to kameti model
  kameti Kameti @relation(fields: [kametiId], references: [id])

  // One withdrawal per month per kameti
  @@unique([kametiId, monthNumber]) 

  // Define table name in database
  @@map("kameti_monthly_withdrawal")
}

model Admin{
  id    Int     @id @default(autoincrement())
  firstName String
  lastName String?
  email String? @unique
  phone String? @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}