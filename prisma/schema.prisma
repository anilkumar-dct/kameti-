generator client {
  provider      = "prisma-client-js"
  engineType    = "binary"
  binaryTargets = ["native", "windows", "darwin", "darwin-arm64", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


enum UserStatus {
  ACTIVE
  INACTIVE
  DEFULTER
}
// Prisma requires at least one model to generate the client
model User {
  id              Int        @id @default(autoincrement())
  name            String
  father_name     String?
  phone_no        String?    @unique
  profile_image   String?
  status          UserStatus @default(INACTIVE)
  aadhaar_number  String?    @unique
  reference       Int?
  created_at      DateTime   @default(now())
  updated_at      DateTime   @updatedAt

  // Self-referencing relation
  referrer        User?      @relation("UserReference", fields: [reference], references: [id])
  referrals       User[]     @relation("UserReference")


  // One-to-One relation with Address
  address         Address?
}

// Define the enum for Kameti status
enum KametiStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}

model Kameti {
  id        Int                      @id @default(autoincrement())
  title     String                   @unique
  budget    Float
  months    Int
  installment Float
  status    KametiStatus             @default(INACTIVE)
  created_at DateTime                 @default(now()) @map("created_at")
  updated_at DateTime                 @updatedAt @map("updated_at")

  // Relations to monthly withdrawals model
  monthly_withdrawals KametiMonthlyWithdrawal[]

  // Define table name in database
  @@map("kameti") 
}

model KametiMonthlyWithdrawal {
  id         Int      @id @default(autoincrement())
  kameti_id   Int      @map("kameti_id")
  month_number Int      @map("month_number")
  amount     Float
  created_at  DateTime @default(now()) @map("created_at")
  updated_at  DateTime @updatedAt @map("updated_at")

  // Relations to kameti model
  kameti Kameti @relation(fields: [kameti_id], references: [id])

  // One withdrawal per month per kameti
  @@unique([kameti_id, month_number]) 

  // Define table name in database
  @@map("kameti_monthly_withdrawal")
}



model Address {
  id        Int     @id @default(autoincrement())
  house_no  String?
  locality  String?
  city      String
  state     String
  pin_code  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // One-to-One relation with User
  userId Int   @unique
  user   User  @relation(fields: [userId], references: [id])

  @@map("address")
}

model Admin {
  id              Int      @id @default(autoincrement())
  full_name       String   @map("full_name")
  email           String   @unique
  phone           String?  @unique
  profile_picture String?  @map("profile_picture")
  password_hash   String   @map("password_hash")
  created_at      DateTime @default(now()) @map("created_at")
  updated_at      DateTime @updatedAt @map("updated_at")

  @@map("admin")
}
